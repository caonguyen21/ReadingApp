<!DOCTYPE html>
<html lang="en">
<%- include("./blocks/head.ejs") %>
<style>
  h1 {
    margin-bottom: -10px;
    font-size: xx-large;
  }

  body {
    display: flex;
    justify-content: center;
  }

  form {
    margin-top: 20px;
    margin: auto;
    display: flex;
    flex-direction: column;
  }

  .input-field {
    position: relative;
    margin-top: 2rem;
  }

  .input-field input {
    padding: 0.8rem;
  }

  form .input-field:first-child {
    margin-bottom: 1.5rem;
  }

  form input[type="submit"] {
    background: linear-gradient(to left, #4776e6, #8e54e9);
    color: white;
    border-radius: 4px;
    margin-top: 2rem;
    padding: 0.4rem;
  }
</style>

<body>
  <form action="/login" method="post">
    <h1>Administrator</h1>
    <div class="input-field">
      <input type="text" name="TaiKhoan" id="username" placeholder="Enter Username" />
    </div>
    <div class="input-field">
      <input type="password" name="MatKhau" id="password" placeholder="Enter Password" />
    </div>
    <input type="submit" value="LogIn" />
    <a href="/resetPass/" style="text-align: right;margin-top: 20px;">Quên mật khẩu</a>

  </form>
  <!--   Core JS Files   -->
  <script src="../assets/js/core/jquery.3.2.1.min.js"></script>
  <script src="../assets/js/core/popper.min.js"></script>
  <script src="../assets/js/core/bootstrap.min.js"></script>
  <!-- jQuery UI -->
  <script src="../assets/js/plugin/jquery-ui-1.12.1.custom/jquery-ui.min.js"></script>
  <script src="../assets/js/plugin/jquery-ui-touch-punch/jquery.ui.touch-punch.min.js"></script>
  <!-- Bootstrap Notify -->
  <script src="../assets/js/plugin/bootstrap-notify/bootstrap-notify.min.js"></script>

  <!-- jQuery Scrollbar -->
  <script src="../assets/js/plugin/jquery-scrollbar/jquery.scrollbar.min.js"></script>
  <!-- Atlantis JS -->
  <script src="../assets/js/atlantis.min.js"></script>
  <!-- Atlantis DEMO methods, don't include it in your project! -->
  <script src="../assets/js/setting-demo2.js"></script>
  <script>
    var text = '<%= message %>';
    if (text == 0) {
      $.notify({
        icon: "flaticon-alarm-1",
        title: "ReadingApp",
        message: "Sai mật khẩu",
      }, {
        type: "danger",
        placement: {
          from: "top",
          align: "center",
        },
        time: 1000,
      });
    }
    if (text == 1) {
      $.notify({
        icon: "flaticon-alarm-1",
        title: "ReadingApp",
        message: "Sai tên tài khoản",
      }, {
        type: "danger",
        placement: {
          from: "top",
          align: "center",
        },
        time: 1000,
      });
    }
    if (text == 3) {
      $.notify({
        icon: "flaticon-alarm-1",
        title: "ReadingApp",
        message: "Tài khoản đang bị vô hiệu",
      }, {
        type: "danger",
        placement: {
          from: "top",
          align: "center",
        },
        time: 1000,
      });
    }
    if (text == 4) {
      $.notify({
        icon: "flaticon-alarm-1",
        title: "ReadingApp",
        message: "Đăng nhập không thành công",
      }, {
        type: "danger",
        placement: {
          from: "top",
          align: "center",
        },
        time: 1000,
      });
    }
  </script>
</body>

</html>
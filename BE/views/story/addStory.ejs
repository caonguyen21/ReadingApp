<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("../blocks/head.ejs") %>
  </head>
  <style>
    .input-with-icon {
      position: relative;
    }

    .field-icon {
      margin-right: 30px;
      position: absolute;
      right: 0;
      top: 65%;
      transform: translateY(-50%);
      cursor: pointer;
    }
    .form-control {
      padding-right: 30px;
    }
  </style>
  <body>
    <div class="wrapper">
      <div class="main-header">
        <!-- Logo Header -->
        <%- include("../blocks/logoheader.ejs") %>
        <!-- End Logo Header -->

        <!-- Navbar Header -->
        <%- include("../blocks/navbarheader.ejs") %>
        <!-- End Navbar -->
      </div>
      <!-- Sidebar -->
      <%- include("../blocks/sidebar.ejs") %>
      <div class="main-panel">
        <div class="content">
          <div class="page-inner">
            <div class="page-header">
              <h4 class="page-title">ReadingApp</h4>
              <ul class="breadcrumbs">
                <li class="nav-home">
                  <a href="/">
                    <i class="flaticon-home"></i>
                  </a>
                </li>
                <li class="separator">
                  <i class="flaticon-right-arrow"></i>
                </li>
                <li class="nav-item">
                  <a href="/user">Danh sách truyện</a>
                </li>
                <li class="separator">
                  <i class="flaticon-right-arrow"></i>
                </li>
                <li class="nav-item">
                  <a href="/user/create">Thêm truyện</a>
                </li>
              </ul>
            </div>
            <form style="width: 650px" method="post" action="/story/create">
              <div class="form-group input-with-icon">
                <label>Tên Truyện</label>
                <input required="required" type="text" class="form-control" name="TaiKhoan" placeholder="Nhập tên truyện..." />
                <small class="form-text text-muted">Tên truyện là unique</small>
              </div>
              <div class="form-group input-with-icon">
                <label for="author">Tác giả</label>
                <select class="form-control" name="select author" id="author" style="width: 200px">
                  <% author.forEach(function(aut) { %>
                  <option value="<%= aut._id %>"><%= aut.TenTacGia %></option>
                  <% }); %>
                </select>
              </div>
              <div class="form-group input-with-icon">
                <label for="category">Thể loại</label>
                <select class="form-control" name="select category" style="width: 200px" id="category">
                  <% category.forEach(function(cate) { %>
                  <option value="<%= cate._id %>"><%= cate.TenTheLoai %></option>
                  <% }); %>
                </select>
              </div>
              <div class="form-group">
                <label for="isDone">Truyện đã hoàn thành</label>
                <input type="checkbox" value="true" id="isDone" name="isDone" />
              </div>
              <div class="col-lg-4 col-md-9 col-sm-12">
                <br />
                <button class="btn btn-success">Create</button>
                <button class="btn btn-danger" onclick="location.href='/story'">Cancel</button>
              </div>
            </form>
          </div>
        </div>
      </div>

      <!-- End Custom template -->
    </div>
    <!--   Core JS Files   -->
    <script src="../../assets/js/core/jquery.3.2.1.min.js"></script>
    <script src="../../assets/js/core/popper.min.js"></script>
    <script src="../../assets/js/core/bootstrap.min.js"></script>
    <!-- jQuery UI -->
    <script src="../../assets/js/plugin/jquery-ui-1.12.1.custom/jquery-ui.min.js"></script>
    <script src="../../assets/js/plugin/jquery-ui-touch-punch/jquery.ui.touch-punch.min.js"></script>
    <!-- Bootstrap Notify -->
    <script src="../../assets/js/plugin/bootstrap-notify/bootstrap-notify.min.js"></script>

    <!-- jQuery Scrollbar -->
    <script src="../../assets/js/plugin/jquery-scrollbar/jquery.scrollbar.min.js"></script>
    <!-- Atlantis JS -->
    <script src="../../assets/js/atlantis.min.js"></script>
    <!-- Atlantis DEMO methods, don't include it in your project! -->
    <script src="../../assets/js/setting-demo2.js"></script>
    <script>
      var text = "<%= message %>";
      if (text == 0) {
        $.notify(
          {
            icon: "flaticon-alarm-1",
            title: "ReadingApp",
            message: "Tạo tài khoản thất bại",
          },
          {
            type: "danger",
            placement: {
              from: "top",
              align: "center",
            },
            time: 1000,
          }
        );
      }
      if (text == 1) {
        $.notify(
          {
            icon: "flaticon-alarm-1",
            title: "ReadingApp",
            message: "Mật khẩu không trùng khớp",
          },
          {
            type: "danger",
            placement: {
              from: "top",
              align: "center",
            },
            time: 1000,
          }
        );
      }
    </script>
  </body>
</html>
